@{
    ViewData["Title"] = "Topic Page";
}

<p>
    @ViewData["id"]
</p>

@if(ViewData["AuthUser"] == null)
{
    <i>Необходимо войти в систему</i>
}
else
{
    var user = ViewData["AuthUser"] as WebApplicationClassWork.DAL.Entities.User;

    <b>Добавить комментарий</b>
    <br />
    <textarea id="article-text" data-author="@user.Id" data-topic="@ViewData["id"]" data-datetime="@DateTime.Now"></textarea>
    <br />
    <button id="button-publish">Опубликовать</button>
    <script src="~/js/topic.js"></script>
}