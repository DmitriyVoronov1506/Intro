@{
    ViewData["Title"] = "Auth Page";
    var user = ViewData["AuthUser"] as WebApplicationClassWork.DAL.Entities.User; 
}

@if(user == null)
{
    
    <form action = "/Auth/Login" method ="post" enctype ="application/x-www-form-urlencoded">
        Login: <input type = "text" name = "UserLogin"/>
        <br />
        Password: <input type = "password" name = "UserPassword"/>
        <br />
        <button>Log In</button>
    </form>
    
    @ViewData["LoginError"]
    
    <button onclick = "location = '/Auth/Register'">Register</button>
}
else
{
    <p>
        Hello, <b>@user.RealName</b>
         <img src = "/img/UserImg/@user.Avatar" style = "max-width: 40px; border-radius:50%"/>
    </p>
}

@ViewData["fromAuthMiddleware"]